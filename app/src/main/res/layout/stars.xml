<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivStarOne"
        android:layout_width="@dimen/smallSize"
        android:layout_height="@dimen/smallSize"
        android:src="@drawable/ic_star_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/ivStarThree"
        android:layout_width="@dimen/mediumSize"
        android:layout_height="@dimen/mediumSize"
        android:src="@drawable/ic_star_gray"
        app:layout_constraintLeft_toRightOf="@id/ivStarOne"
        app:layout_constraintRight_toLeftOf="@id/ivStarTwo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivStarTwo"
        android:layout_width="@dimen/smallSize"
        android:layout_height="@dimen/smallSize"
        android:src="@drawable/ic_star_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>