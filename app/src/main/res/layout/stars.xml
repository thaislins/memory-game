<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/starOne"
        android:layout_width="@dimen/smallSize"
        android:layout_height="@dimen/smallSize"
        android:src="@drawable/ic_star"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/smallSize"
        android:layout_height="@dimen/smallSize"
        android:src="@drawable/ic_star"
        app:layout_constraintLeft_toRightOf="@id/starOne"
        app:layout_constraintRight_toLeftOf="@id/starThree"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/starThree"
        android:layout_width="@dimen/smallSize"
        android:layout_height="@dimen/smallSize"
        android:src="@drawable/ic_star"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>